<script type="text/javascript" charset="utf-8">
  window.badge_colors = <%= raw json_escape(@badge.colors) %>
</script>

<div id="show-badge-container">
  <main>
    <div class="link-to-gallery">
      <a href="/">&lt; Badge Gallery</a>
    </div>

    <h1><%= @badge.name %></h1>

    <div class="badge-view">
      <div class="badge-wrap">
        <svg class="badge" xmlns="http://www.w3.org/2000/svg">
          <g class="colors">
            <rect class="badge-stripe" x="0" y="0" width="0" height="100%"></rect>
            <rect class="badge-stripe" x="0" y="0" width="0" height="100%"></rect>
            <rect class="badge-stripe" x="0" y="0" width="0" height="100%"></rect>
            <rect class="badge-stripe" x="0" y="0" width="0" height="100%"></rect>
            <rect class="badge-stripe" x="0" y="0" width="0" height="100%"></rect>
          </g>
          <circle r="50%" cx="50%" cy="50%" fill="none" stroke="white" stroke-width="25px"></circle>
        </svg>
      </div>
    </div>

    <div class="creator">
      Created by <%= @badge.creator_name %>.
    </div>

    <div class="print-info">
      <%= link_to "Print", print_badge_path(@badge), class: "primary-button", target: "_blank" %>
      <p>Use Avery brand labels, SKU <strong>22877</strong>, and choose "fit to page width" in print options.</p>
    </div>
  </main>
</div>
