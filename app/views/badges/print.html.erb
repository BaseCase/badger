<!DOCTYPE html>
<html>
<head>
  <title>Badger</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
</head>

<body>
<script type="text/javascript" charset="utf-8">
  window.badge_colors = <%= raw json_escape(@badge.colors) %>
</script>

<div id="print-badge-container">
  <div class="row">
    <div class="badge-placeholder"></div>
    <div class="badge-placeholder"></div>
    <div class="badge-placeholder"></div>
  </div>
  <div class="row">
    <div class="badge-placeholder"></div>
    <div class="badge-placeholder"></div>
    <div class="badge-placeholder"></div>
  </div>
  <div class="row">
    <div class="badge-placeholder"></div>
    <div class="badge-placeholder"></div>
    <div class="badge-placeholder"></div>
  </div>
  <div class="row">
    <div class="badge-placeholder"></div>
    <div class="badge-placeholder"></div>
    <div class="badge-placeholder"></div>
  </div>
</div>

<template id="tpl-badge-to-print">
  <div class="one-badge">
    <%= render "shared/empty_badge" %>

    <div class="badge-info">
      <p class="creator">"<%= @badge.name %>" created by <%= @badge.creator_name %>.</p>
      <p class="station-info"><span class="url">badger.caseybrant.com<%= url_for @badge %></span></p>
    </div>
  </div>
</template>
</body>
</html>
