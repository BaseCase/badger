<!DOCTYPE html>
<html>
<head>
  <title>Badger</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
</head>

<body>
<script type="text/javascript" charset="utf-8">
  window.badge_colors = <%= raw json_escape(@badges.pluck(:colors)) %>
</script>

<div id="print-badge-container">
  <% @badges.each_slice(3) do |row| %>
    <div class="row">
      <% row.each do |badge| %>
        <div class="one-badge">
          <%= render "shared/empty_badge" %>

          <div class="badge-info">
            <p class="creator">"<%= badge.name %>" created by <%= badge.creator_name %>.</p>
            <p class="station-info">
              <span class="url">badger.caseybrant.com<%= url_for badge %></span>
            </p>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
</body>
</html>
